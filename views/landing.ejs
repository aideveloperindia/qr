<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QR Multiplex - Landing</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            color: #333;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }
        h1 {
            color: #667eea;
            margin-bottom: 10px;
            font-size: 28px;
        }
        .subtitle {
            color: #666;
            margin-bottom: 30px;
            font-size: 14px;
        }
        .loading {
            text-align: center;
            padding: 40px;
            color: #666;
        }
        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #667eea;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .merchant-info {
            display: none;
        }
        .merchant-info.active {
            display: block;
        }
        .merchant-name {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            margin-bottom: 25px;
            text-align: center;
        }
        .section {
            margin-bottom: 25px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 12px;
        }
        .section-title {
            font-size: 16px;
            font-weight: 600;
            color: #667eea;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
        }
        .section-title::before {
            content: 'üì±';
            margin-right: 8px;
        }
        .wifi-section .section-title::before { content: 'üì∂'; }
        .review-section .section-title::before { content: '‚≠ê'; }
        .menu-section .section-title::before { content: 'üçΩÔ∏è'; }
        .coupon-section .section-title::before { content: 'üé´'; }
        .payment-section .section-title::before { content: 'üí≥'; }
        .wifi-credentials {
            font-family: 'Courier New', monospace;
            background: white;
            padding: 15px;
            border-radius: 8px;
            margin-top: 10px;
        }
        .wifi-cred {
            margin: 8px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .wifi-cred strong {
            color: #333;
        }
        .wifi-cred span {
            color: #667eea;
            font-weight: 600;
        }
        .btn {
            display: inline-block;
            padding: 14px 28px;
            background: #667eea;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            text-align: center;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
            margin: 8px 0;
        }
        .btn:hover {
            background: #5568d3;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }
        .btn-secondary {
            background: #6c757d;
        }
        .btn-secondary:hover {
            background: #5a6268;
        }
        .btn-group {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            margin-top: 10px;
        }
        .error-message {
            background: #fee;
            color: #c33;
            padding: 15px;
            border-radius: 8px;
            margin-top: 15px;
            display: none;
        }
        .error-message.active {
            display: block;
        }
        .location-denied {
            text-align: center;
            padding: 20px;
            background: #fff3cd;
            border-radius: 8px;
            margin-top: 20px;
        }
        .location-denied p {
            margin-bottom: 15px;
            color: #856404;
        }
        
        /* Mobile Responsive Styles */
        @media (max-width: 768px) {
            body {
                padding: 10px;
            }
            .container {
                padding: 20px;
                border-radius: 15px;
            }
            h1 {
                font-size: 24px;
            }
            .subtitle {
                font-size: 13px;
            }
            .merchant-name {
                font-size: 20px;
            }
            .section {
                padding: 15px;
                margin-bottom: 20px;
            }
            .section-title {
                font-size: 15px;
            }
            .wifi-credentials {
                padding: 12px;
            }
            .wifi-cred {
                flex-direction: column;
                align-items: flex-start;
                gap: 5px;
            }
            .wifi-cred span {
                word-break: break-all;
            }
            .btn {
                padding: 12px 20px;
                font-size: 15px;
            }
            .btn-group {
                grid-template-columns: 1fr;
                gap: 8px;
            }
        }
        
        @media (max-width: 480px) {
            body {
                padding: 5px;
            }
            .container {
                padding: 15px;
                border-radius: 12px;
            }
            h1 {
                font-size: 22px;
            }
            .merchant-name {
                font-size: 18px;
            }
            .section {
                padding: 12px;
            }
            .section-title {
                font-size: 14px;
            }
            .btn {
                padding: 10px 16px;
                font-size: 14px;
            }
            .loading {
                padding: 30px 20px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome!</h1>
        <p class="subtitle">Welcome to our service!</p>

        <div class="merchant-info" id="merchantInfo">
            <div class="merchant-name" id="merchantName"></div>

            <div class="section wifi-section" id="wifiSection" style="display: none;">
                <div class="section-title">Wi-Fi Credentials</div>
                <div class="wifi-credentials">
                    <div class="wifi-cred">
                        <strong>SSID:</strong>
                        <span id="wifiSSID"></span>
                    </div>
                    <div class="wifi-cred">
                        <strong>Password:</strong>
                        <span id="wifiPassword"></span>
                    </div>
                </div>
            </div>

            <div class="section review-section" id="reviewSection" style="display: none;">
                <div class="section-title">Leave a Review</div>
                <a href="#" id="reviewLink" class="btn" target="_blank">‚≠ê Review on Google</a>
            </div>

            <div class="section menu-section" id="menuSection" style="display: none;">
                <div class="section-title">View Menu</div>
                <a href="#" id="menuLink" class="btn" target="_blank">üçΩÔ∏è Open Menu</a>
            </div>

            <div class="section coupon-section" id="couponSection" style="display: none;">
                <div class="section-title">Get Coupon</div>
                <a href="#" id="couponLink" class="btn" target="_blank">üé´ Claim Coupon</a>
            </div>

            <div class="section payment-section">
                <div class="section-title">Try Payment (Demo)</div>
                <div class="btn-group">
                    <button class="btn" onclick="openUPI('gpay')" id="gpayBtn" style="display: none;">Google Pay</button>
                    <button class="btn" onclick="openUPI('phonepe')" id="phonepeBtn" style="display: none;">PhonePe</button>
                    <button class="btn" onclick="openUPI('paytm')" id="paytmBtn" style="display: none;">Paytm</button>
                </div>
            </div>
        </div>

        <div class="error-message" id="errorMessage"></div>
    </div>

    <script>
        const code = '<%= code %>';
        let merchantData = null;

        // IMMEDIATE DETECTION AND REDIRECT - Execute BEFORE anything else
        (function() {
            // Get merchant data from server-side
            const merchants = <%- JSON.stringify(merchants || []) %>;
            if (merchants.length === 0) return;
            
            const merchant = merchants[0]; // Use first merchant for speed
            
            // Check URL parameters first (most reliable)
            const urlParams = new URLSearchParams(window.location.search);
            const appParam = urlParams.get('app');
            
            // Check document.referrer for payment app indicators
            const referer = (document.referrer || '').toLowerCase();
            const userAgent = navigator.userAgent.toLowerCase();
            
            // Check if opened from payment app context
            const isInAppBrowser = window.navigator.standalone || 
                                 window.matchMedia('(display-mode: standalone)').matches;
            
            // Try to detect from context
            let detectedApp = null;
            let upiIntent = null;
            
            // Method 1: Query parameter (most reliable)
            if (appParam === 'gpay' && merchant.upi?.gpay_intent) {
                upiIntent = merchant.upi.gpay_intent;
            } else if (appParam === 'phonepe' && merchant.upi?.phonepe_intent) {
                upiIntent = merchant.upi.phonepe_intent;
            } else if (appParam === 'paytm' && merchant.upi?.paytm_intent) {
                upiIntent = merchant.upi.paytm_intent;
            }
            // Method 2: Referer check
            else if ((referer.includes('phonepe') || referer.includes('phone-pe')) && merchant.upi?.phonepe_intent) {
                upiIntent = merchant.upi.phonepe_intent;
            } else if ((referer.includes('gpay') || referer.includes('google pay') || referer.includes('paisa')) && merchant.upi?.gpay_intent) {
                upiIntent = merchant.upi.gpay_intent;
            } else if (referer.includes('paytm') && merchant.upi?.paytm_intent) {
                upiIntent = merchant.upi.paytm_intent;
            }
            // Method 3: If in-app browser, try to detect from URL or try all
            else if (isInAppBrowser) {
                // If we're in an in-app browser, it might be a payment app
                // Try PhonePe first (most common), then others
                if (merchant.upi?.phonepe_intent) {
                    upiIntent = merchant.upi.phonepe_intent;
                } else if (merchant.upi?.gpay_intent) {
                    upiIntent = merchant.upi.gpay_intent;
                } else if (merchant.upi?.paytm_intent) {
                    upiIntent = merchant.upi.paytm_intent;
                }
            }
            // Method 4: If we're on the landing page and no detection worked,
            // but user scanned from a payment app, try PhonePe first (most common)
            // This is a fallback - if we're here, detection failed but user might be in payment app
            else {
                // Check if URL has any payment app indicators
                const currentUrl = window.location.href.toLowerCase();
                if (currentUrl.includes('phonepe') || currentUrl.includes('phone-pe')) {
                    upiIntent = merchant.upi?.phonepe_intent;
                } else if (currentUrl.includes('gpay') || currentUrl.includes('google pay') || currentUrl.includes('paisa')) {
                    upiIntent = merchant.upi?.gpay_intent;
                } else if (currentUrl.includes('paytm')) {
                    upiIntent = merchant.upi?.paytm_intent;
                }
                // Last resort: if we can't detect, try PhonePe (most common in India)
                if (!upiIntent && merchant.upi?.phonepe_intent) {
                    upiIntent = merchant.upi.phonepe_intent;
                }
            }
            
            // IMMEDIATE REDIRECT - Multiple methods to ensure it works
            if (upiIntent) {
                console.log('[CLIENT] Redirecting to UPI intent:', upiIntent);
                
                // Hide page content immediately
                if (document.body) {
                    document.body.style.display = 'none';
                }
                
                // Create redirect page immediately
                const redirectHtml = `
                    <!DOCTYPE html>
                    <html>
                    <head>
                        <meta charset="UTF-8">
                        <meta name="viewport" content="width=device-width, initial-scale=1.0">
                        <title>Opening Payment App...</title>
                        <style>
                            * { margin:0; padding:0; box-sizing:border-box; }
                            body { 
                                margin:0; padding:0; 
                                font-family:Arial, sans-serif; 
                                text-align:center; 
                                background:linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                                min-height:100vh;
                                display:flex;
                                align-items:center;
                                justify-content:center;
                            }
                            .container {
                                background:white;
                                padding:40px 30px;
                                border-radius:15px;
                                box-shadow:0 10px 40px rgba(0,0,0,0.2);
                                max-width:400px;
                                width:90%;
                            }
                            h1 { color:#333; margin-bottom:20px; font-size:24px; }
                            p { color:#666; margin-bottom:30px; font-size:16px; }
                            .btn { 
                                display:inline-block; 
                                padding:18px 40px; 
                                background:#007bff; 
                                color:white; 
                                text-decoration:none; 
                                border-radius:8px; 
                                font-size:18px; 
                                font-weight:bold;
                                transition:all 0.3s;
                                box-shadow:0 4px 15px rgba(0,123,255,0.3);
                            }
                        </style>
                    </head>
                    <body>
                        <div class="container">
                            <h1>Opening Payment App...</h1>
                            <p>If payment app doesn't open automatically, click below:</p>
                            <a href="${upiIntent}" class="btn" id="openBtn">Open Payment App</a>
                        </div>
                        <script>
                            // Try immediate redirect
                            try {
                                window.location.href = "${upiIntent}";
                            } catch(e) {}
                            
                            // Auto-click button after load
                            window.addEventListener('load', function() {
                                setTimeout(function() {
                                    const btn = document.getElementById('openBtn');
                                    if (btn) btn.click();
                                }, 300);
                            });
                            
                            // Auto-click when returning from warning
                            document.addEventListener('visibilitychange', function() {
                                if (!document.hidden) {
                                    setTimeout(function() {
                                        const btn = document.getElementById('openBtn');
                                        if (btn) btn.click();
                                    }, 100);
                                }
                            });
                        </script>
                    </body>
                    </html>
                `;
                
                // Replace entire page
                document.open();
                document.write(redirectHtml);
                document.close();
                
                return;
            }
        })();

        // NO GEOLOCATION - Use first merchant immediately
        function resolveMerchant() {
            try {
                document.getElementById('loading').style.display = 'none';
                document.getElementById('errorMessage').classList.remove('active');

                // Use first merchant directly from server-side data - NO API CALL NEEDED
                const merchants = <%- JSON.stringify(merchants || []) %>;
                if (merchants.length === 0) {
                    throw new Error('No merchants available');
                }
                
                const merchant = merchants[0];
                merchantData = merchant;
                displayMerchant(merchant);
            } catch (error) {
                console.error('Error resolving merchant:', error);
                document.getElementById('errorMessage').textContent = 'Error: ' + error.message;
                document.getElementById('errorMessage').classList.add('active');
            }
        }
        
        // Call immediately on page load - NO GEOLOCATION NEEDED
        resolveMerchant();

        function displayMerchant(merchant) {
            document.getElementById('merchantName').textContent = merchant.name;
            
            // Wi-Fi
            if (merchant.wifi && merchant.wifi.ssid) {
                document.getElementById('wifiSection').style.display = 'block';
                document.getElementById('wifiSSID').textContent = merchant.wifi.ssid;
                document.getElementById('wifiPassword').textContent = merchant.wifi.password;
            }

            // Review
            if (merchant.google_place_id) {
                document.getElementById('reviewSection').style.display = 'block';
                document.getElementById('reviewLink').href = 
                    `https://search.google.com/local/writereview?placeid=${merchant.google_place_id}`;
            }

            // Menu - Always show menu link (use internal menu page)
            document.getElementById('menuSection').style.display = 'block';
            const menuUrl = `/menu?code=${code}&merchant=${merchant.id}`;
            document.getElementById('menuLink').href = menuUrl;

            // Coupon
            if (merchant.coupon_url) {
                document.getElementById('couponSection').style.display = 'block';
                document.getElementById('couponLink').href = merchant.coupon_url;
            }

            // Payment buttons
            if (merchant.upi) {
                if (merchant.upi.gpay_intent) {
                    document.getElementById('gpayBtn').style.display = 'block';
                }
                if (merchant.upi.phonepe_intent) {
                    document.getElementById('phonepeBtn').style.display = 'block';
                }
                if (merchant.upi.paytm_intent) {
                    document.getElementById('paytmBtn').style.display = 'block';
                }
            }

            document.getElementById('merchantInfo').classList.add('active');
        }

        function openUPI(type) {
            if (!merchantData || !merchantData.upi) return;
            
            let url = null;
            switch(type) {
                case 'gpay':
                    url = merchantData.upi.gpay_intent;
                    break;
                case 'phonepe':
                    url = merchantData.upi.phonepe_intent;
                    break;
                case 'paytm':
                    url = merchantData.upi.paytm_intent;
                    break;
            }

            if (url) {
                window.location.href = url;
            }
        }
    </script>
</body>
</html>



